{
  "name": "HeyBud",
  "description": "Shared shopping experience Shopify app",
  "keywords": ["shopify", "shared-shopping", "nodejs"],
  "env": {
    "SHOPIFY_API_KEY": {
      "description": "Your Shopify API key",
      "required": true
    },
    "SHOPIFY_API_SECRET": {
      "description": "Your Shopify API secret",
      "required": true
    },
    "SCOPES": {
      "description": "Shopify API scopes",
      "value": "read_products,write_products"
    },
    "HOST": {
      "description": "App host URL",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}